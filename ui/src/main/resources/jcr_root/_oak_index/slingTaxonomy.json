{
  "jcr:primaryType": "oak:QueryIndexDefinition",
  "compatVersion": 2,
  "type": "lucene",
  "includedPaths": ["/etc/taxonomy"],
  "async": ["async", "nrt"],
  "evaluatePathRestrictions": true,
  "reindex": true,
  "indexRules": {
    "jcr:primaryType": "nt:unstructured",
    "sling:Taxonomy": {
      "jcr:primaryType": "nt:unstructured",
      "properties": {
        "jcr:primaryType": "nt:unstructured",
        "jcrTitle": {
          "jcr:primaryType": "nt:unstructured",
          "propertyIndex": true,
          "analyzed": true,
          "name": "jcr:title",
          "type": "String"
        },
        "nodeName": {
          "jcr:primaryType": "nt:unstructured",
          "propertyIndex": true,
          "name": ":nodeName",
          "type": "String"
        }
      }
    }
  }
}
